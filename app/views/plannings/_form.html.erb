<div class="container my-auto">
  <div class="row mt-5">
    <div class="col-lg-6 col-md-8 col-12 mx-auto">
      <div class="card z-index-0 fadeIn3 fadeInBottom">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
            <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Add planning</h4>
            <div class="row mt-3">
              <div class="col-2 text-center ms-auto">
                <a class="btn btn-link px-3" href="javascript:;">
                  <i class="fa fa-facebook text-white text-lg"></i>
                </a>
              </div>
              <div class="col-2 text-center px-1">
                <a class="btn btn-link px-3" href="javascript:;">
                  <i class="fa fa-github text-white text-lg"></i>
                </a>
              </div>
              <div class="col-2 text-center me-auto">
                <a class="btn btn-link px-3" href="javascript:;">
                  <i class="fa fa-google text-white text-lg"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body">

          <%= form_with(model: planning, local: true) do |f| %>

            <div class="input-group input-group-static my-3">
              <label for="planning_salle_id" class="">Select salles</label>
              <select name="planning[salle_id]" id="planning_salle_id" class="form-control">
                <% Salle.all.each do |s| %>
                    <option value=<%=s.id%> ><%=s.name%></option>
                <% end %>
              </select>
            </div>

            <div class="input-group input-group-static my-3">
              <label for="planning_formation_id" class="">Select formations</label>
              <select name="planning[formation_id]" id="planning_formation_id" class="form-control">
                <% Formation.all.each do |f| %>
                    <option value=<%=f.id%> ><%=f.libelle%></option>
                <% end %>
              </select>
            </div>

            <div class="input-group input-group-static my-3">
              <label for="planning_material_id" class="">Select materials</label>
              <select name="planning[material_id]" id="planning_material_id" class="form-control">
                <% Material.all.each do |m| %>
                    <option value=<%=m.id%> ><%=m.name%></option>
                <% end %>
              </select>
            </div>

            <div class="input-group input-group-static my-3">
              <%= f.label :date_begin %>
              <%= f.datetime_local_field :date_begin, class:"form-control" %>
            </div>

            <div class="input-group input-group-static my-3">
              <%= f.label :date_end %>
              <%= f.datetime_local_field :date_end, class:"form-control" %>
            </div>

            <div class="text-center">
              <%= f.submit "Add planning", class:"btn bg-gradient-primary w-100 my-4 mb-2"%>
            </div>

          <% end %>

        </div>

      </div>
    </div>
  </div>
</div>
